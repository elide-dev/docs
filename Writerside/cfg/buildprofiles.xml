<?xml version="1.0" encoding="UTF-8"?>
<buildprofiles xsi:noNamespaceSchemaLocation="https://resources.jetbrains.com/writerside/1.0/build-profiles.xsd"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <variables>
        <!-- Search -->
        <algolia-id>6PJZ7B6YKU</algolia-id>
        <algolia-index>dev_elide_docs</algolia-index>
        <algolia-api-key>0972c9bdc10f2fa920b737534bd6bb96</algolia-api-key>

        <!-- Web -->
        <web-root>https://docs.elide.dev</web-root>
        <product-web-url>https://elide.dev</product-web-url>

        <!-- Style & Images -->
        <primary-color>purple</primary-color>
        <custom-favicons>mark-e-favicon-r2.svg</custom-favicons>
        <header-logo>mark-sq-gray.svg</header-logo>

        <!-- Analytics -->
        <analytics-head-script-file>analytics_head.html</analytics-head-script-file>
        <analytics-body-html-file>analytics_tail.html</analytics-body-html-file>

        <!-- Feedback Widget -->
        <feedback-widget>false</feedback-widget>
        <feedbackRequireEmail>false</feedbackRequireEmail>
        <feedback-url>https://github.com/elide-dev/elide/issues/new</feedback-url>
        <feedback-support>https://github.com/elide-dev/elide/issues/new</feedback-support>

        <!-- SEO -->
        <generate-canonicals>true</generate-canonicals>
        <og-twitter>https://twitter.com/elide_dev</og-twitter>
        <noindex-content>false</noindex-content>
        <!-- <og-image></og-image> -->

        <!-- HTML Snippets -->
        <!-- <include-in-head></include-in-head> -->
        <!-- <include-before-body></include-before-body> -->
        <!-- <include-after-body></include-after-body> -->

        <!-- Versions -->
        <!--<versions-comparison></versions-comparison>-->
        <!--<versions-switcher></versions-switcher>-->

        <!-- Downloads -->
        <download-title>Downloads</download-title>
        <download-page>https://docs.elide.dev/installation.html</download-page>
        <showDownloadButton>true</showDownloadButton>

        <!-- General Settings -->
        <webmaster>help@elide.dev</webmaster>
        <write-help-state-file>true</write-help-state-file>
    </variables>

    <sitemap priority="0.6" change-frequency="monthly"/>

    <icons>
        <shared-src>icons</shared-src>
    </icons>

    <footer>
        <social type="linkedin" href="https://www.linkedin.com/company/elidecloud">%product% on LinkedIn</social>
        <social type="twitter" href="https://twitter.com/elide_dev">%product% on Twitter</social>
        <link href="https://elide.dev">Website</link>
        <link href="https://github.com/elide-dev">%product% on GitHub</link>
    </footer>

    <llm-txt single-file="true"/>

    <!-- Instance: Elide Docs -->

    <build-profile instance="e">
        <variables>
            <offline-docs>true</offline-docs>
            <noindex-content>false</noindex-content>
        </variables>
    </build-profile>
</buildprofiles>
